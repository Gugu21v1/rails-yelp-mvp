<%= simple_form_for (restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, :collection => { 'chinese' => 'chinese', 'belgian' => 'belgian', 'italian' => 'italian', 'japanese' => 'japanese', 'french' => 'french'}, :include_blank => 'Select the Category', :multiple => false, :selected => [''] %>

  <%= f.submit %>
<% end %>
